# EdgeX-Lighter Arbitrage System Configuration
# Copy this file to .env and fill in your values

# ========================================
# Lighter Configuration
# ========================================
# Get these from Lighter dashboard
API_KEY_PRIVATE_KEY=your_lighter_private_key_here
LIGHTER_ACCOUNT_INDEX=0
LIGHTER_API_KEY_INDEX=0
LIGHTER_MARKET_INDEX=0

# ========================================
# Strategy Configuration
# ========================================
TICKER=BTC
ORDER_QUANTITY=0.001
MAX_POSITION=0.01
THRESHOLD_OFFSET=10
MIN_SAMPLES=100

# ========================================
# Risk Configuration
# ========================================
MAX_DAILY_LOSS=100
MAX_LATENCY_MS=500
MIN_BALANCE=10

# ========================================
# Server Configuration
# ========================================
WS_SERVER_HOST=localhost
WS_SERVER_PORT=8765

# ========================================
# Telegram Notifications (Optional)
# ========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_GROUP_ID=
ACCOUNT_LABEL=A1

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_DIR=logs
